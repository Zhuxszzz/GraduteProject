<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_lay"
    android:layout_width="295dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="33dp"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/black_30"
        android:textSize="17dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="您确定吗？" />

    <TextView
        android:id="@+id/description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="33dp"
        android:gravity="start"
        android:textColor="@color/black_60"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/title_tv"
        tools:text="该操作会清空已识别出的文字，是否继续？" />

    <TextView
        android:id="@+id/negative_btn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@color/dialog_negative"
        android:gravity="center"
        android:textColor="@color/black_99"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/positive_btn"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_tv"
        tools:text="取消" />

    <TextView
        android:id="@+id/positive_btn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@color/dialog_positive"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/negative_btn"
        app:layout_constraintTop_toBottomOf="@+id/description_tv"
        tools:text="确认" />
</androidx.constraintlayout.widget.ConstraintLayout>